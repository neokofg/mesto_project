.pincode-input-container {
    display: flex;
    justify-content: center;
}

.pincode-input {
    width: 52px;
    height: 52px;
    border-radius: 12px;
    text-align: center;
    border: 2px solid #ccc;
    font-size: 20px;
    margin: 0 5px;
}

.pincode-input:focus {
    outline: none;
    border-color: blue;
}

body {
    background-color: #F1F5F9;
}

.slide-down {
    transition: transform 0.3s ease-out, opacity 0.3s ease-out;
    transform: translateY(-100%); /* начальное положение, элемент скрыт за верхней границей экрана */
    opacity: 0;
}

.slide-down.show {
    transform: translateY(0); /* конечное положение, элемент на своем месте */
    opacity: 1;
}